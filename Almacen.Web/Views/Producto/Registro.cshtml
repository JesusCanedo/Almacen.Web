@using Almacen.Core.Entidades
@model Producto
<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Registro de Productos</h1>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-body">

                        <form action="@Url.Action("Guardar", "Producto")">
                            <input type="hidden" class="form-control" name="id" value="@Model.Id">
                            <div class="form-group">
                                <label>Codigo:</label>
                                <input class="form-control" name="codigo" value="@if (Model.Id != 0) { @Model.Codigo}">
                            </div>
                            <div class="form-group">
                                <label>Nombre del producto:</label>
                                <input class="form-control" name="nombre" value="@if (Model.Id != 0) { @Model.Nombre}">
                            </div>
                            <div class="form-group">
                                <label>Precio:</label>
                                <input class="form-control" name="precio" value="@if (Model.Id != 0) { @Model.Precio}">
                            </div>
                            <div class="form-group">
                                <label>Proveedor:</label>
                                <input class="form-control" name="proveedor" value="@if (Model.Id != 0) { @Model.proveedor}">
                            </div>
                            <div class="form-group">
                                <label>Categoria:</label>
                                <input class="form-control" name="categoria" value="@if (Model.Id != 0) { @Model.categoria}">
                            </div>

                            <div class="form-group">
                                <label>Existencia:</label>
                                <input class="form-control" type="number" name="existencia" value="@if (Model.Id != 0) { @Model.Existencia}">
                            </div>

                            <button class="btn btn-success" type="submit">Guardar</button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
