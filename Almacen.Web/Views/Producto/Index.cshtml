@using Almacen.Core.Entidades
@model List<Producto>
<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Catalogo de Productos</h1>
                <p>
                    Lista de productos.
                </p>
            </div>
        </div>


        <div class="row">
            <div class="col-lg-12">
                <a href="@Url.Action("Registro", "Producto", new { id = 0 })" class="btn btn-info">
                    Agregar nuevo
                </a>
                <div class="panel panel-default">
                    <div class="panel-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" role="grid" aria-describedby="dataTables-example_info">
                                <thead class="bg-white text-uppercase">
                                    <tr class="ligth ligth-data" role="row">
                                        <th style="width: 17.8px;"></th>
                                        <th class="sorting" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="Codigo: activate to sort column ascending" style="width: 134.8px;">Codigo</th>
                                        <th class="sorting" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="Nombre: activate to sort column ascending" style="width: 64px;">Nombre</th>
                                        <th class="sorting" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="Precio: activate to sort column ascending" style="width: 72.8px;">Precio</th>
                                        <th class="sorting" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="Proveedor: activate to sort column ascending" style="width: 57.6px;">Proveedor</th>
                                        <th class="sorting" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="Categoria: activate to sort column ascending" style="width: 99.2px;">Categoria</th>
                                        <th class="sorting" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="Existencia: activate to sort column ascending" style="width: 48.8px;">Existencia</th>
                                        <th class="sorting" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="Acciones: activate to sort column ascending" style="width: 48.8px;">Acciones</th>

                                    </tr>
                                </thead>
                                <!-- Page Content
                                </table>
                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th>Nombre</th>
                                            <th>Categoria</th>
                                            <th>Proveedor</th>
                                            <th>Existencia</th>
                                            <th>Marca</th>
                                            <th>Acciones</th>
                                        </tr>
                                    </thead>
                                        -->
                                <tbody>
                                    @foreach (Producto po in Model) {
                                        <tr>
                                            <td></td>
                                            <td>@po.Codigo</td>
                                            <td>@po.Nombre</td>
                                            <td>@po.Precio</td>
                                            <td>@po.proveedor</td>
                                            <td>@po.categoria</td>
                                            <td>@po.Existencia</td>
                                            <td>
                                                <div class="d-flex align-items-center list-action">
                                                    <a href="@Url.Action("Registro", "Producto", new { id = po.Id })" class="fa fa-edit" data-toggle="tooltip" data-placement="top" title="" data-original-title="Editar"><i class="ri-pencil-line mr-0"></i> Editar</a>
                                                    <a onclick="eliminar(@po.Id)"  class="fa fa-trash" data-toggle="tooltip" data-placement="top" title="" data-original-title="Elminar" href="#"><i class="ri-delete-bin-line mr-0"></i> Eliminar</a>
                                                </div>
                                            </td>
                                        </tr>

                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/Content/js/almacen/producto.js"></script>
